<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/motion_layout"
    app:layoutDescription="@xml/content_detail_scene"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.DetailActivity"
    tools:showIn="@layout/activity_detail">


    <TextView
        android:id="@+id/tv_label_filename"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detail_margin"
        android:text="@string/label_filename"
        />

    <TextView
        android:id="@+id/tv_filename"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detail_margin"
        tools:text="@string/loadapp_option" />

    <TextView
        android:id="@+id/tv_label_status"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/detail_margin"
        android:layout_marginTop="@dimen/detail_margin_top"
        android:text="@string/label_status"
       />

    <TextView
        android:id="@+id/tv_status"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/detail_margin"
        tools:text="@string/status_string" />


    <Button
        android:id="@+id/btn_ok"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detail_margin"
        android:background="@color/colorAccent"
        android:text="@android:string/ok"
        android:textColor="@color/white"
      />

</androidx.constraintlayout.motion.widget.MotionLayout>